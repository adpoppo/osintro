<%= link_to 'フォローする', user_relationships_path(user.id), method: :post, remote: true, class:"btn-sm btn-success" %>

<div class="follow-index">
  <div id="follow-count">
    <%= link_to follows_user_path(user) do %>
      <h6>フォロー<%= @following_users.count %></h6>
    <% end %>
  </div>
  <div id="follower-count">
    <%= link_to followers_user_path(user) do %>
      <h6>フォロワー<%= @follower_users.count %></h6>
    <% end %>
  </div>
</div>