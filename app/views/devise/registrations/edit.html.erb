<%= render "shared/second_header" %>

<div class="user-info-main">

  <h2 class="user-info-message">プロフィールを編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :avatar_image, "プロフィール画像" %><span class="required-profile">必須</span><br />
      <%= f.file_field :avatar_image, class: "form-area", id: 'avatar-image' %>
      <div id="user-avatar"></div>
    </div>

    <div class="field">
      <%= f.label :nickname, "ニックネーム" %><span class="required-profile">必須</span><br />
      <%= f.text_field :nickname, class: "form-area", autofocus: true, autocomplete: "off", maxlength: "20", placeholder: "20文字以内" %>
    </div>

    <div class="field">
      <%= f.label :email %><span class="required-profile">必須</span><br />
      <%= f.email_field :email, class: "form-area", autocomplete: "email", placeholder: "例:osintro@example.jp" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %><span class="required-profile">必須</span><br />
      <div class="password-area">
        <%= f.password_field :password, class: "form-area", autocomplete: "new-password", placeholder: "半角英数字6文字以上" %>
        <%= f.password_field :password_confirmation, class: "form-area", autocomplete: "new-password", placeholder: "確認のためもう一度入力してください" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, class:"form-area", autocomplete: "current-password" %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール" %><br />
      <%= f.text_area :profile, class: "form-area", rows: "5", maxlength: "160", placeholder: "160文字以内" %>
    </div>

    <div class="actions">
      <%= f.submit "保存する" %>
    </div>
  <% end %>

  <h3>アカウントを削除する場合</h3>

  <p><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "もどる", :back %>

</div>
